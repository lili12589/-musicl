<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kg="http://schemas.android.com/apk/res/com.kugou.android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/search_bar_item" />

            <include layout="@layout/common_listview" />
        </LinearLayout>
        <!--
        <include android:layout_gravity="center" android:id="@+id/loading_bar" android:layout_centerHorizontal="true" layout="@layout/loading_layout" />
        <include android:layout_gravity="center" android:id="@+id/refresh_bar" android:layout_centerHorizontal="true" layout="@layout/refresh_layout" />
        -->
    </FrameLayout>

</LinearLayout>